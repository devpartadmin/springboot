<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.sarnath.sshop.mapper.ReciveAddressEntityMapper">

	<resultMap id="ReciveAddressEntity"
		type="com.sarnath.sshop.entity.ReciveAddressEntity">
		<id column="address_id" property="addressId" />
		<result column="province" property="province" />
		<result column="city" property="city" />
		<result column="town" property="town" />
		<result column="address_detail" property="addressDetail" />
		<result column="address_code" property="addressCode" />
		<result column="address_person" property="addressPerson" />
		<result column="address_phone" property="addressPhone" />
		<result column="createtime" property="createTime" />
		<result column="createuser" property="createUser" />
		<result column="updatetime" property="updateTime" />
		<result column="updateuser" property="updateUser" />
		<result column="valid" property="validEnum"
			typeHandler="org.apache.ibatis.type.EnumOrdinalTypeHandler"
			javaType="com.sarnath.sshop.enums.ValidEnum" />
	</resultMap>
	<select id="getReciveAddressListById" parameterType="int"
		resultMap="ReciveAddressEntity">
		select
		address_id,province,city,town,address_detail,address_code,address_person,address_phone,createtime,createUser,updatetime,updateuser,valid
		from address_info where address_id=#{addressId}
	</select>

</mapper>